# SDL
SOURCES_C = $(wildcard \
	vendor/sdl2-libretro/src/*.c \
	vendor/sdl2-libretro/src/atomic/SDL_atomic.c \
	vendor/sdl2-libretro/src/atomic/SDL_spinlock.c \
	vendor/sdl2-libretro/src/audio/*.c \
	vendor/sdl2-libretro/src/audio/dummy_libretro/*.c \
	vendor/sdl2-libretro/src/cpuinfo/*.c \
	vendor/sdl2-libretro/src/events/*.c \
	vendor/sdl2-libretro/src/file/*.c \
	vendor/sdl2-libretro/src/haptic/*.c \
	vendor/sdl2-libretro/src/haptic/dummy/*.c \
	vendor/sdl2-libretro/src/joystick/*.c \
	vendor/sdl2-libretro/src/joystick/dummy_libretro/*.c \
	vendor/sdl2-libretro/src/loadso/dummy/*.c \
	vendor/sdl2-libretro/src/power/*.c \
	vendor/sdl2-libretro/src/filesystem/dummy/*.c \
	vendor/sdl2-libretro/src/render/*.c \
	vendor/sdl2-libretro/src/render/software/*.c \
	vendor/sdl2-libretro/src/stdlib/*.c \
	vendor/sdl2-libretro/src/thread/*.c \
	vendor/sdl2-libretro/src/timer/*.c \
	vendor/sdl2-libretro/src/video/*.c \
	vendor/sdl2-libretro/src/video/dummy_libretro/*.c \
)

ifeq ($(SDL_PREFIX), win)
	SOURCES_C += $(wildcard \
		vendor/sdl2-libretro/src/timer/windows/*.c \
		vendor/sdl2-libretro/src/core/windows/SDL_windows.c \
		vendor/sdl2-libretro/src/thread/generic/SDL_systls.c \
		vendor/sdl2-libretro/src/thread/windows/SDL_syssem.c \
		vendor/sdl2-libretro/src/thread/windows/SDL_systhread.c \
		vendor/sdl2-libretro/src/thread/windows/SDL_sysmutex.c \
		vendor/sdl2-libretro/src/thread/generic/SDL_syscond.c \
	)
else ifeq ($(SDL_PREFIX), lin)
	SOURCES_C += $(wildcard \
		vendor/sdl2-libretro/src/timer/dummy_libretro/*.c \
		vendor/sdl2-libretro/src/thread/generic/SDL_systls.c \
		vendor/sdl2-libretro/src/thread/pthread/SDL_syssem.c \
		vendor/sdl2-libretro/src/thread/pthread/SDL_systhread.c \
		vendor/sdl2-libretro/src/thread/pthread/SDL_sysmutex.c \
		vendor/sdl2-libretro/src/thread/pthread/SDL_syscond.c \
	)
else ifeq ($(SDL_PREFIX), wiiu)
	SOURCES_C += $(wildcard \
		vendor/sdl2-libretro/src/timer/dummy_libretro/*.c \
		vendor/sdl2-libretro/src/thread/generic/SDvendor/sdl2-libretro/L_systls.c \
		vendor/sdl2-libretro/src/thread/pthread/SDL_syssem.c \
		vendor/sdl2-libretro/src/thread/pthread/SDL_systhread.c \
		vendor/sdl2-libretro/src/thread/pthread/SDL_sysmutex.c \
		vendor/sdl2-libretro/src/thread/pthread/SDL_syscond.c \
	)
endif
FLAGS += -DSDL_THREADS_DISABLED -DSDL_CDROM_DISABLED
FLAGS += -Ivendor/sdl2-libretro/include

OBJECTS += $(SOURCES_CXX:.cpp=.o) $(SOURCES_C:.c=.o)

# Build all the dependencies, and the core.
all: | dependencies $(TARGET)

ifeq ($(DEBUG), 0)
   FLAGS += -O3 -ffast-math -fomit-frame-pointer
else
   FLAGS += -O0 -g
endif

LDFLAGS +=  $(fpic) $(SHARED) $(EXTRA_LDF)

WARNINGS :=

ifneq ($(HAVE_TESTS),)
	FLAGS += -D__HAVE_TESTS__
endif
